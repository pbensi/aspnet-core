@{
    ViewData["Title"] = "Login";
}
@model api.shared.Dto.LoginRequestDto

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="row card-header">
                    <div class="col text-start">
                        Administrator Login
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div id="errorMessage" class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <form id="loginForm" asp-action="Login" method="post">
                        <div class="form-group">
                            <label asp-for="AccountName" class="form-label">Username</label>
                            <input id="accountNameInput" asp-for="AccountName" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input id="passwordInput" asp-for="Password" type="password" class="form-control" required />
                        </div>
                        <div class="row mt-2">
                            <div class="col">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var accountNameInput = document.getElementById('accountNameInput');
        var passwordInput = document.getElementById('passwordInput');
        var errorMessage = document.getElementById('errorMessage');

        accountNameInput.addEventListener('input', clearErrorMessage);
        passwordInput.addEventListener('input', clearErrorMessage);

        function clearErrorMessage() {
            errorMessage.style.display = 'none';
        }
    });
</script>